<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    tools:context=".SetProfile">


    <!--    backIcon-->
    <LinearLayout
        android:id="@+id/Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_west_24"/>

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginLeft="30dp"
            android:text="Set Profie Mode"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <!--   End backIcon-->

    <LinearLayout
        android:id="@+id/note"
        android:layout_below="@+id/Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/rounded_corner">

        <LinearLayout
            android:id="@+id/note1"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Title1"
                android:text="Locations"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Title2"
                android:text="Set Location"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/Title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:text="Silent"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/Title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ring"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginRight="1000dp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
        </LinearLayout>


<!--        1st Line-->

        <LinearLayout
            android:id="@+id/line1"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/l1"
                android:hint="University"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="#3000B0FF"
                android:padding="2dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:id="@+id/setbtn1"
                android:text="SET"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
        <!--        End 1st Line-->

        <!--        2nd Line-->

        <LinearLayout
            android:id="@+id/line2"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/l2"
                android:hint="Hospital"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="#3000B0FF"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:id="@+id/setbtn2"
                android:text="SET"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
        <!--        End 2nd Line-->

        <!--        3rd Line-->

        <LinearLayout
            android:id="@+id/line3"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/l3"
                android:hint="Court"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="#3000B0FF"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:id="@+id/setbtn3"
                android:text="SET"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
        <!--        End 3rd Line-->

        <!--        4th Line-->

        <LinearLayout
            android:id="@+id/line4"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/l4"
                android:hint="Home"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="#3000B0FF"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:id="@+id/setbtn4"
                android:text="SET"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
        <!--        End 4th Line-->


        <!--        5th Line-->

        <LinearLayout
            android:id="@+id/line5"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/l5"
                android:hint="Office"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="#3000B0FF"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:id="@+id/setbtn5"
                android:text="SET"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
        <!--        End 5th Line-->


        <!--        6th Line-->

        <LinearLayout
            android:id="@+id/line6"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/l6"
                android:hint="Temple"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="#3000B0FF"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:id="@+id/setbtn6"
                android:text="SET"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
        <!--        End 6th Line-->

        <!--        7th Line-->

        <LinearLayout
            android:id="@+id/line7"
            android:layout_below="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner">


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/SetL"
                android:text="Add Profie"
                android:layout_gravity="center"
                android:backgroundTint="@color/holo_blue_light"
                android:textColor="@color/black" />

        </LinearLayout>
        <!--        End 7th Line-->




    </LinearLayout>

</RelativeLayout>